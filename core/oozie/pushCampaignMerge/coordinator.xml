<coordinator-app name="dap-pushCampaignMerge" frequency="${frequency}" start="${startTime}" end="${endTime}" timezone="${timezone}" xmlns="uri:oozie:coordinator:0.4">
    <datasets>
        <dataset name="pushCampaignData" frequency="${datasetFrequency}"
                 initial-instance="${datasetinitialinstance}" timezone="${datasettimezone}">
            <uri-template>${dataseturitemplate}/${YEAR}/${MONTH}/${DAY}</uri-template>
            <done-flag>${doneFlag}</done-flag>
        </dataset>
    </datasets>

    <input-events>
        <data-in name="input" dataset="pushCampaignData">
            <start-instance>${inputeventstartinstance}</start-instance>
            <end-instance>${inputeventendinstance}</end-instance>
        </data-in>
    </input-events>

    <action>
        <workflow>
            <app-path>${workflowPath}</app-path>
        </workflow>
    </action>
</coordinator-app>