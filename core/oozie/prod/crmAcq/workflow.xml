<workflow-app xmlns="uri:oozie:workflow:0.5" name="dap-crmAcquisition-wf">
    <global>
        <job-tracker>${jobTracker}</job-tracker>
        <name-node>${nameNode}</name-node>
        <configuration>
            <property>
                <name>mapreduce.job.queuename</name>
                <value>${queueName}</value>
            </property>
        </configuration>
    </global>

    <start to='acquisition' />

    <fork name="acquisition">
        <path start="crmAcqIncr" />
        <path start="crmAcqFull" />
    </fork>

    <action name="crmAcqFull">
        <shell xmlns="uri:oozie:shell-action:0.3">
            <exec>run.pl</exec>
            <argument>-t</argument>
            <argument>${jobEnv}</argument>
            <argument>-c</argument>
            <argument>crmAcqFull</argument>
            <env-var>YARN_CONF_DIR=/etc/hadoop/conf</env-var>
            <env-var>HADOOP_USER_NAME=${wf:user()}</env-var>
            <file>${scriptHome}/run.pl#run.pl</file>
            <capture-output/>
        </shell>
        <ok to="crmJoin"/>
        <error to="fail"/>
    </action>

    <action name="crmAcqIncr">
        <shell xmlns="uri:oozie:shell-action:0.3">
            <exec>run.pl</exec>
            <argument>-t</argument>
            <argument>${jobEnv}</argument>
            <argument>-c</argument>
            <argument>crmAcqIncr</argument>
            <env-var>YARN_CONF_DIR=/etc/hadoop/conf</env-var>
            <env-var>HADOOP_USER_NAME=${wf:user()}</env-var>
            <file>${scriptHome}/run.pl#run.pl</file>
            <capture-output/>
        </shell>
        <ok to="crmMerge"/>
        <error to="fail"/>
    </action>

    <action name="crmMerge">
        <shell xmlns="uri:oozie:shell-action:0.3">
            <exec>run.pl</exec>
            <argument>-t</argument>
            <argument>${jobEnv}</argument>
            <argument>-c</argument>
            <argument>crmMerge</argument>
            <env-var>YARN_CONF_DIR=/etc/hadoop/conf</env-var>
            <env-var>HADOOP_USER_NAME=${wf:user()}</env-var>
            <file>${scriptHome}/run.pl#run.pl</file>
            <capture-output/>
        </shell>
        <ok to="crmJoin"/>
        <error to="fail"/>
    </action>

    <join name="crmJoin" to="end"/>

    <kill name="fail">
        <message>Workflow failed, error message[${wf:errorMessage(wf:lastErrorNode())}]</message>
    </kill>

    <end name="end" />

</workflow-app>